<%- include('../partials/header'); %>
<div class="container">

<h1 class ="intro"><%= pageTitle %></h1>
</div>
    <% products.forEach( (item, idx) => { %>
        <div class="container">
            <div class="card">
                <div class="container-fliud">
                    <div class="wrapper row">
                        <div class="details col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1">
                                <img src="<%= item.image %>" />
                            </div>
                        </div>
                    </div>
            <div class="details col-md-6">
                    <h3 class="product-title"><a href="/products/<%= item.slug %>"><%= 'Name: ' + item.name %></a></h3>
                <p class="product-description"><%= item.remarks %>
                </p>
                    <p class="index">
                        <%= 'Price: $' + item.price %>
                    </p>
                    <p>
                    <%= 'Priority: ' + item.priority %>
                </p>         
                    <p class="vote index"><strong><%= item.thumbsUp %></strong> <i class="fa fa-thumbs-up" style="font-size:24px"></i>       
                        <strong><%= item.thumbsDown %> <i class="fa fa-thumbs-down" style="font-size:24px"></i>
                            </strong></p>               
                             <div class="outer action-buttons">
                    <div class="inner">
                        <a class="btn btn-outline-success my-2 my-sm-0" href="/products/<%= item.slug %>/edit">Edit</a>
                    </div>

                    <% if (user !== null) { %>
                    </form>
                    <div class="inner">
                    <form method="POST" action="/users/cart?_method=DELETE">
                        <input type="hidden" name="product_id" value="<%= item._id %>" />
                        <button type="submit" class="btn btn-outline-success my-2 my-sm-0 delete">Remove</button>
                    </form>
                    <% } %>

                </div>
                </div>
            </div>
            </div>
    </div>
</div>
</div>
</div>
</div>
    <% }) %>


<%- include('../partials/footer'); %>