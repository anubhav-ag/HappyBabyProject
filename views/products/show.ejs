<%- include('../partials/header'); %>
<div class="container">
    <h1 class='intro'><%= pageTitle %></h1>
    <article>
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="details col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1">
                                <img src="<%= item.image %>" />
                            </div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title"><%= 'Name: ' + item.name %></h3>
                        <p class="product-description index"><%= item.remarks %>
                        </p>
                        <div class="rating">
                            <span class="review-no index">41 reviews</span>
                        </div>
                    <p class="price index">
                        <%= 'Price: ' + item.price %>
                    </p>
                    <p class="index">
                        <%= 'Priority: ' + item.priority %>
                        </p>
                        <p class="vote index"><strong>91%</strong> of buyers enjoyed this product! <strong> (87 votes)</strong></p>
                        <div class="outer">
                            <a class="btn inner btn-outline-success my-2 my-sm-0" href="/products/<%= item.slug %>/ratings/new">Give Review</a>
                        </div>
                                </div>
                </div>
            </div>
        </div>
    </article>
</div>
<%- include('../partials/footer'); %>
