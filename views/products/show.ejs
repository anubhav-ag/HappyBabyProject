<%- include('../partials/header'); %>
<div class="container">
    <h1 class='intro'><%= pageTitle %></h1>
    <article>
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="details col-md-6">
                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1">
                                <img src="<%= item.image %>" />
                            </div>
                        </div>
                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title"><%= 'Name: ' + item.name %></h3>
                        <p class="product-description"><%= item.remarks %>
                        </p>
                        <div class="rating">
                            <span class="review-no">41 reviews</span>
                        </div>
                    <span class="price">
                        <%= 'Price: ' + item.price %>
                    </span>
                    <%= 'Priority: ' + item.priority %>
                    <p><a class="btn btn-outline-success my-2 my-sm-0" href="/products/<%= item.slug %>/ratings/new">Give Review</a></p>

                                </div>
                </div>
            </div>
        </div>
    </article>
</div>
<%- include('../partials/footer'); %>
